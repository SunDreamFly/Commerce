<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_height="wrap_content">


<CheckBox
    android:id="@+id/shop_cart_item_cb"
    android:layout_marginLeft="5dp"
    app:layout_constraintTop_toTopOf="@id/shop_cart_item_iamge"
    app:layout_constraintBottom_toBottomOf="@id/shop_cart_item_iamge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints" />

    <ImageView

        app:layout_constraintLeft_toRightOf="@id/shop_cart_item_cb"
        android:id="@+id/shop_cart_item_iamge"
        android:layout_width="90dp"
        android:layout_height="90dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@id/shop_cart_item_iamge"
        android:layout_width="wrap_content"
        android:text="sadfasdfasdfasdfsadf"
        android:id="@+id/shop_cart_name"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        app:layout_constraintLeft_toRightOf="@id/shop_cart_item_iamge"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:text="money"
        android:id="@+id/shop_cart_price"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@id/shop_cart_item_iamge"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:text="已选择  >"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:layout_marginRight="15dp"
        android:id="@+id/xuanze"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/shop_cart_count"
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:text="shuliang"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />




    <TextView
        app:layout_constraintRight_toLeftOf="@id/number"
        android:layout_width="30dp"
        android:id="@+id/jia"
        android:text="-"
        android:visibility="gone"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="@id/shop_cart_item_iamge"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        tools:ignore="MissingConstraints" />
    <TextView
        app:layout_constraintRight_toLeftOf="@id/jian"
        android:layout_width="30dp"
        android:id="@+id/number"
        app:layout_constraintBottom_toBottomOf="@id/shop_cart_item_iamge"
        android:text="3"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="30dp"
        android:id="@+id/jian"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@id/shop_cart_item_iamge"
        android:text="+"
        android:gravity="center"

        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>