<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_special_one_img"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
    <TextView
        android:text="123456uio"
        android:id="@+id/iv_special_one_name"
        app:layout_constraintTop_toBottomOf="@id/iv_special_one_img"
        app:layout_constraintLeft_toLeftOf="@id/iv_special_one_img"
        app:layout_constraintRight_toRightOf="@id/iv_special_one_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>